<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientdetailsActivity"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/app_bg">

                <TextView
                    android:id="@+id/p_Id"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:text="P_ID"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.054"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.138" />

                <EditText
                    android:id="@+id/pID_editText"
                    android:layout_width="151dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_bg"
                    android:ems="10"
                    android:hint="patient id"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textColorHint="#E1393737"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.066"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.783" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="107dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.754"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.031" />

                <EditText
                    android:id="@+id/date_edit"
                    android:layout_width="161dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:drawableLeft="@drawable/calendar_icon"
                    android:text=" Date "
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.889"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.833" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_bg"
               >
<!--                android:background="#ACD0EC"-->
                <TextView
                    android:id="@+id/patientName"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:text="Name"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.102"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.031" />

                <EditText
                    android:id="@+id/patientName_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:ems="10"
                    android:hint="name"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColorHint="#E1393737"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.164"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.119" />

                <TextView
                    android:id="@+id/Age"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:text="Age"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.904"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.033" />

                <EditText
                    android:id="@+id/Age_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:ems="10"
                    android:hint="age"
                    android:padding="3dp"
                    android:inputType="number"
                    android:textColorHint="#E1393737"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.902"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.12" />

                <TextView
                    android:id="@+id/Gender"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:text="Gender"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.095"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.262" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.333"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.381">

                    <RadioButton
                        android:id="@+id/Male_radioButton"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Male"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/Female_radioButton"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Female"
                        android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/Other_radioButton"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Other"
                        android:textColor="@color/black"/>
                </RadioGroup>

                <TextView
                    android:id="@+id/Disease"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:text="Disease"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.089"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/Disease_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:hint="disease name"
                    android:inputType="text"
                    android:padding="3dp"
                    android:textColorHint="#E1393737"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.107"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.604" />

                <TextView
                    android:id="@+id/Description"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.102"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.756" />

                <EditText
                    android:id="@+id/Description_editTextText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="description"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:padding="3dp"
                    android:textColorHint="#E1393737"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.164"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.872" />

                <Button
                    android:id="@+id/saveData"
                    android:text="save Details"
                    android:background="@drawable/custom_button_bg"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
